{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "*"
            ]
        },
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2018",
            "dom.iterable",
            "dom"
        ],
        "jsx": "react",
        "jsxFactory": "h"
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
